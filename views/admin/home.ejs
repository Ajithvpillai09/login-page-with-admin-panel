
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" >
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>  

</head>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a href="/home" class="navbar-brand"><i class="fas fa-code me-2"></i>ADMIN</a>
        <button class="navbar-toggler" data-bs-target="#my-nav"
        data-bs-toggle="collapse" aria-controls="my-nav" aria-expanded="false"
        aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div id="my-nav" class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                <form action="/logoutAdmin" method="GET">
                    <button class="nav-link fw-bold py-1 px-0 btn btn-light text-primary" type="submit"  >Logout</button>
                  </form>
                <li class="nav-item active">
                    <a class="nav-link" href="/add"><i class="fas fa-user-plus me-i"></i>Add User</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <div class="container my-4">
                <form method="get" action="/search">
                    <input type="text" name="q" placeholder="Search users...">
                    <button type="submit">Search</button>
                </form>
                
            </div>
            
            <% if(message){ %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>"
                    role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
                <% } %>
            <div class="table-responsive">
                <% if(users != ''){ %>
                    
                <table class="table table-striped text-center" id="myTable">
                   <thead>
                    <tr class="table-dark">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                   </thead>
                   <tbody>
                    <% users.forEach((row,index) => { %>
                        <tr>
                            <td><%= index %></td>
                            <td><%= row.name %></td>
                            <td><%= row.email %></td>
                            <td>
                               <a href="/edit/<%= row._id %>" class="text-succes"><i class="fas fa-edit fa-lg mx-1"></i></a> 
                               <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a> 
                            </td>
                        </tr>

                    <% }) %>    
                </tbody>
                </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No Users Found In The DataBase!</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>
  
<script>
$(document).ready(function () {
    $('#myTable').DataTable();
});
</script>


